<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.CLB_BlutoothSniffer.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.CLB_BlutoothSniffer.PopupOverlay"
            app:title="CLB_BluetoothSniffer" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/SettingsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>

                    <TextView
                        android:id="@+id/lineTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Linie:"
                        android:textSize="19sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/lineET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:hint="42"
                        android:inputType="number"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/stopTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Haltestelle:"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/stopET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Postplatz"
                        android:inputType="text"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/directionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Richtung:"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/directionET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Norden,Innenstadt"
                        android:inputType="text"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/weatherTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Wetter:"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/weatherET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Klar,Regen"
                        android:inputType="text"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/idTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Messung Nr:"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/idET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="1"
                        android:inputType="number"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/commentTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Komentar:"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/commentET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:inputType="text"
                        android:textSize="17sp" />
                </TableRow>
            </TableLayout>


            <Button
                android:id="@+id/startMeasurementBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:clickable="true"
                android:enabled="true"
                android:text="Messung Starten"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SettingsTable" />

            <TextView
                android:id="@+id/nFahrgasteTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Anzahl Fahrgäste:"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="@+id/nFahrgasteET"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nFahrgasteET" />

            <EditText
                android:id="@+id/nFahrgasteET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:enabled="false"
                android:hint="0"
                android:inputType="number"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/nFahrgasteTV"
                app:layout_constraintTop_toBottomOf="@+id/startMeasurementBT" />

            <Button
                android:id="@+id/ArrivedAtStopBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:enabled="false"
                android:text="ANkunft an haltestelle"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nFahrgasteET" />

            <Button
                android:id="@+id/stopMeasurementBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:enabled="false"
                android:text="Messung Beenden"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ArrivedAtStopBT" />


            <TextView
                android:id="@+id/nGerateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Anzahl Geräte bei letztem Scan:"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="@+id/nGerateET"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nGerateET" />

            <EditText
                android:id="@+id/nGerateET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:enabled="false"
                android:hint="0"
                android:inputType="number"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/nGerateTV"
                app:layout_constraintTop_toBottomOf="@+id/stopMeasurementBT" />


            <TextView
                android:id="@+id/exceptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text=""
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nGerateET" />

            <TextView
                android:id="@+id/listTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text=""
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exceptionTV" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>